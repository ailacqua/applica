{
  "manifest_version": 3,
  "name": "Job Application Tracker",
  "version": "1.0",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["http://localhost:3000/"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
